<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent">

    <RadioButton
        android:id="@+id/nav_map_button"
        android:checked="true"
        android:drawableTop="@drawable/selector_bottom_navigator_view_icon_map"
        android:text="@string/map_icon_label"
        style="@style/AppTheme.RadioButtonLikeBottomNavigationView">

    </RadioButton>

    <RadioButton
        android:id="@+id/nav_favor_list_button"
        android:drawableTop="@drawable/selector_bottom_navigator_view_icon_favorlist"
        android:text="@string/favors_icon_label"
        style="@style/AppTheme.RadioButtonLikeBottomNavigationView">

    </RadioButton>

    <Button
        android:id="@+id/hiddenButton"

        android:layout_width="3dp"

        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:text=""

        />

</RadioGroup>