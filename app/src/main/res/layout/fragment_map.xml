<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:background="@color/material_green_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.tabs.MapsPage"
    android:id="@+id/fragment_map">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/offline_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#444A44"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_sync_problem_48dp"
        android:visibility="invisible"
        app:backgroundTint="#444A44" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:uiCompass="true"
        map:uiZoomControls="true"
        tools:context=".view.tabs.MapsPage" />

    <RadioGroup
        android:checkedButton="@+id/list_switch"
        android:id="@+id/toggle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/toggle_green_outline"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="1dp"
            android:id="@+id/map_switch"
            android:background="@drawable/toggle_widget_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/map_toggle"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/material_gray_300" />

        <RadioButton
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/list_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/list_toggle"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/material_green_500" />
    </RadioGroup>

</FrameLayout>
